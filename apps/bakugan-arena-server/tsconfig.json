{
  "compilerOptions" : {
    "target" : "es2020",
    "module" : "commonjs",
    "moduleResolution" : "node",
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true,
    "strict" : true,
    "sourceMap" : true,
    "outDir" : "dist",
    "baseUrl" : ".",
    "paths" : {
      "*" : [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "forceConsistentCasingInFileNames" : true
  },
  "include" : ["src/**/*"],
  "exclude" : ["node_modules", "dist"]
}